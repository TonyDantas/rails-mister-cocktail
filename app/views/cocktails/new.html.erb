<div class="container">

  <h1><%= @cocktail.name %></h1>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <h1>Create a new cocktail</h1>

        <%= simple_form_for @cocktail do |f| %>
          <%= f.input :name %>
          <%= f.button :submit, class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
